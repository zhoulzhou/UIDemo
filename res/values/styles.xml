<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="CustomTitlePageIndicator"> 
    <item name="android:background">@drawable/general_title_two</item>  
    <item name="footerColor">#FF279DE7</item>  
    <item name="footerLineHeight">1dp</item>  
    <item name="footerIndicatorHeight">4dp</item>  
    <item name="footerIndicatorStyle">underline</item>  
    <item name="android:textColor">#AAE6E6E6</item>  
    <item name="selectedColor">#FFE6E6E6</item>  
    <item name="selectedBold">false</item> 
    </style>
    
    <!-- 文字阴影 -->  
    <style name="recmd_detail_text"> 
     <item name="android:shadowColor">#cc000000</item>  
     <item name="android:shadowDx">0</item>  
     <item name="android:shadowDy">2</item>  
     <item name="android:shadowRadius">1</item> 
    </style>

</resources>
