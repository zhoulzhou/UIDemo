<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Animations" />

    <!-- PopDownMenu -->
    <style name="Animations.PopDownMenu" />

    <style name="Animations.PopDownMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/popup_grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/popup_shrink_from_bottom</item>
    </style>

    <style name="Animations.PopDownMenu.Left">
        <item name="@android:windowEnterAnimation">@anim/popup_grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/popup_shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="Animations.PopDownMenu.Right">
        <item name="@android:windowEnterAnimation">@anim/popup_grow_from_topright_to_bottomleft</item>
        <item name="@android:windowExitAnimation">@anim/popup_shrink_from_bottomleft_to_topright</item>
    </style>

    <style name="Animations.PopDownMenu.Reflect">
        <item name="@android:windowEnterAnimation">@anim/popup_pump_top</item>
        <item name="@android:windowExitAnimation">@anim/popup_disappear</item>
    </style>

    <style name="Animations.PopDownMenu.GROW">
        <item name="@android:windowEnterAnimation">@anim/popup_move_up_to_down</item>
        <item name="@android:windowExitAnimation">@anim/popup_move_down_to_up</item>
    </style>

    <style name="Animations.PopDownMenu.MoveLR">
        <item name="@android:windowEnterAnimation">@anim/popup_move_left_to_right</item>
        <item name="@android:windowExitAnimation">@anim/popup_move_right_to_left</item>
    </style>

    <!-- PopUpMenu -->
    <style name="Animations.PopUpMenu" />

    <style name="Animations.PopUpMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/popup_grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/popup_shrink_from_top</item>
    </style>

    <style name="Animations.PopUpMenu.Left">
        <item name="@android:windowEnterAnimation">@anim/popup_grow_from_bottomleft_to_topright</item>
        <item name="@android:windowExitAnimation">@anim/popup_shrink_from_topright_to_bottomleft</item>
    </style>

    <style name="Animations.PopUpMenu.Right">
        <item name="@android:windowEnterAnimation">@anim/popup_grow_from_bottomright_to_topleft</item>
        <item name="@android:windowExitAnimation">@anim/popup_shrink_from_topleft_to_bottomright</item>
    </style>

    <style name="Animations.PopUpMenu.Reflect">
        <item name="@android:windowEnterAnimation">@anim/popup_pump_bottom</item>
        <item name="@android:windowExitAnimation">@anim/popup_disappear</item>
    </style>

    <style name="Animations.PopUpMenu.GROW">
        <item name="@android:windowEnterAnimation">@anim/popup_move_down_to_up2</item>
        <item name="@android:windowExitAnimation">@anim/popup_move_up_to_down2</item>
    </style>

    <style name="Animations.PopUpMenu.MoveLR">
        <item name="@android:windowEnterAnimation">@anim/popup_move_left_to_right</item>
        <item name="@android:windowExitAnimation">@anim/popup_move_right_to_left</item>
    </style>
    
    <!--  -->
        <style name="Animations.PopUpMenu.DropDownDown">
        <item name="@android:windowEnterAnimation">@anim/grow_fade_in</item>
        <item name="@android:windowExitAnimation">@anim/shrink_fade_out</item>
    </style>

    <style name="Animations.PopUpMenu.DropDownUp">
        <item name="@android:windowEnterAnimation">@anim/grow_fade_in_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/shrink_fade_out_from_bottom</item>
    </style>
    
        <style name="Animations.PopUpMenu.Test"><item name="@android:windowEnterAnimation">@anim/popup_test_in</item>
        <item name="@android:windowExitAnimation">@anim/popup_test_out</item>

    </style>

</resources>