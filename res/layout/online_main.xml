<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true">
    
    <LinearLayout 
        android:id="@+id/tab_online_bar"
        android:layout_width="match_parent"
        android:layout_height="32dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/recommdlist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="推荐"
            />
         <TextView 
            android:id="@+id/playlist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="歌单"
            />
          <TextView 
            android:id="@+id/ranklist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="榜单"
            />
           <TextView 
            android:id="@+id/artistlist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="歌手"
            />
            <TextView 
            android:id="@+id/radiolist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="电台"
            />
        
    </LinearLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/online_main_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_online_bar" />
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="4dip"
        android:layout_below="@id/tab_online_bar"
        />
    
    <LinearLayout 
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#ffffff"
        android:visibility="gone"
        >
            
        <ImageView 
            android:id="@+id/empty_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"
            />
        <TextView 
            android:id="@+id/empty_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="empty view"
            />
        
    </LinearLayout>
    
</RelativeLayout>